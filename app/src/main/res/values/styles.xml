<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BtnPrimary">
        <item name="android:background">@drawable/shape_add_btn</item>
        <item name="android:text">@string/add_note</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="BtnSave">
        <item name="android:text">@string/save</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="BtnCancel">
        <item name="android:text">@string/cancel</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
